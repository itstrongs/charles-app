<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/dimen_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_bg_white_translucent"
        android:orientation="horizontal"
        android:padding="@dimen/dimen_margin">

        <ImageView
            android:id="@+id/img_portrait"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/text_username"
            style="@style/style_text_title_dark"
            android:layout_gravity="bottom"
            android:layout_marginLeft="@dimen/dimen_margin"
            android:text="小小强者" />
    </LinearLayout>

    <TextView
        style="@style/style_text_setting_item"
        android:text="远程控制" />

    <View style="@style/style_view_common_line" />

    <TextView
        style="@style/style_text_setting_item"
        android:text="回忆录" />

    <View style="@style/style_view_common_line" />

    <TextView
        style="@style/style_text_setting_item"
        android:text="时光机" />

    <View style="@style/style_view_common_line" />

    <TextView
        style="@style/style_text_setting_item"
        android:text="主题皮肤" />

    <View style="@style/style_view_common_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text_switch_server"
            style="@style/style_text_setting_item"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="服务器切换" />

        <Switch
            android:id="@+id/switch_server"
            style="@style/style_text_common_white"
            android:layout_gravity="bottom"
            android:padding="@dimen/dimen_margin_small"
            android:text="debug" />
    </LinearLayout>

    <View style="@style/style_view_common_line" />

    <TextView
        android:id="@+id/text_logout"
        style="@style/style_text_setting_item"
        android:text="退出登录" />

    <View style="@style/style_view_common_line" />
</LinearLayout>
