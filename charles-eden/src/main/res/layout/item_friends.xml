<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_head"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dimen_margin_small"
    android:background="@drawable/shape_bg_white_translucent"
    android:orientation="horizontal"
    android:padding="@dimen/dimen_margin">

    <ImageView
        android:id="@+id/img_portrait"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_margin_small"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_nickname"
            style="@style/style_text_common_dark"
            android:layout_width="wrap_content"
            android:text="名字"
            android:textColor="@color/color_blue" />

        <TextView
            android:id="@+id/text_content"
            style="@style/style_text_common_dark"
            android:layout_marginTop="@dimen/dimen_margin_small"
            android:text="内容" />

        <ImageView
            android:id="@+id/img_bg"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="@dimen/dimen_margin_small"
            android:visibility="gone"
            android:scaleType="fitStart" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_margin_small"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_date"
                style="@style/style_text_tip_gray"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="时间" />

            <ImageView
                android:id="@+id/img_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:visibility="gone"
                android:src="@drawable/ic_delete" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
