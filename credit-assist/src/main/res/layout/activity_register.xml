<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/dimen_margin">

        <include layout="@layout/merge_user_login" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_margin">

            <EditText
                android:id="@+id/edit_verify_code"
                style="@style/style_text_title_dark"
                android:layout_width="match_parent"
                android:background="@color/color_transparent"
                android:hint="请输入验证码"
                android:padding="@dimen/dimen_margin_small" />

            <TextView
                android:id="@+id/text_get_verify_code"
                style="@style/style_text_title_white"
                android:layout_alignParentRight="true"
                android:text="获取验证码"
                android:textColor="@color/colorPrimary" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/color_gray_0" />

        <TextView
            android:id="@+id/text_protocol"
            style="@style/style_text_tip_gray"
            android:layout_marginLeft="@dimen/dimen_margin_small"
            android:layout_marginTop="@dimen/dimen_margin"
            android:text="请仔细阅读《授权协议》"
            android:textColor="@color/colorPrimary" />

        <Button
            android:id="@+id/btn_register"
            style="@style/style_text_title_white"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/dimen_margin_big"
            android:background="@drawable/shape_text_bg_blue_5"
            android:text="注册" />

        <LinearLayout
            android:id="@+id/layout_to_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dimen_margin">

            <TextView
                style="@style/style_text_common_dark"
                android:text="已有账号？立即"
                android:textColor="@color/color_gray_1" />

            <TextView
                style="@style/style_text_common_dark"
                android:text="登录"
                android:textColor="@color/colorPrimary" />
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>