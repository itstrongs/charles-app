<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/dimen_margin">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dimen_margin_big"
            android:src="@mipmap/text_app_name" />

        <EditText
            android:id="@+id/edit_username"
            style="@style/style_text_common_dark"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/dimen_margin_big"
            android:background="@color/color_transparent"
            android:hint="请输入手机号"
            android:paddingTop="@dimen/dimen_margin_small"
            android:paddingBottom="@dimen/dimen_margin_small"
            android:singleLine="true" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/color_gray_0" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_margin"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/edit_verify_code"
                style="@style/style_text_common_dark"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@color/color_transparent"
                android:hint="请输入验证码"
                android:paddingTop="@dimen/dimen_margin_small"
                android:paddingBottom="@dimen/dimen_margin_small"
                android:singleLine="true" />

            <TextView
                android:id="@+id/text_get_verify_code"
                style="@style/style_text_common_white"
                android:layout_alignParentRight="true"
                android:text="获取验证码"
                android:textColor="@color/colorPrimary" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/color_gray_0" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_margin_small">

            <TextView
                style="@style/style_text_tip_dark"
                android:drawableLeft="@mipmap/ic_select_point"
                android:drawablePadding="@dimen/dimen_margin_small"
                android:text="我阅读并同意" />

            <TextView
                android:id="@+id/text_protocol"
                style="@style/style_text_tip_dark"
                android:text="《授权协议》"
                android:textColor="@color/colorPrimary" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_login"
            style="@style/style_text_title_white"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/dimen_margin_big"
            android:background="@drawable/shape_text_bg_blue_5"
            android:text="登录" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>