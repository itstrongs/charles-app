<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#2461FF" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_margin_small"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dimen_margin"
            android:paddingRight="@dimen/dimen_margin">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <ImageView
                    android:id="@+id/img_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/dimen_margin"
                    android:paddingRight="@dimen/dimen_margin"
                    android:paddingBottom="@dimen/dimen_margin"
                    android:src="@mipmap/ic_back_white" />

                <ImageView
                    android:id="@+id/img_close"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/img_back"
                    android:padding="@dimen/dimen_margin"
                    android:src="@mipmap/ic_close" />

                <TextView
                    style="@style/style_text_title_white"
                    android:layout_centerInParent="true"
                    android:text="黑名单检测" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_margin"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/text_score_desc"
                        style="@style/style_text_common_white"
                        android:text="经第三方风控平台的综合评价，\n您的网贷被拒率为77%" />

                    <TextView
                        style="@style/style_text_tip_gray"
                        android:layout_marginTop="@dimen/dimen_margin"
                        android:background="@drawable/shape_bg_white_full_25_2"
                        android:paddingLeft="@dimen/dimen_margin_small"
                        android:paddingRight="@dimen/dimen_margin_small"
                        android:text="请继续保持良好的借贷行为,逐步降低您的网贷被拒率"
                        android:textSize="9sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/text_score"
                        style="@style/style_text_common_white"
                        android:background="@mipmap/ic_blacklist_score"
                        android:gravity="center"
                        android:text="77%" />

                    <TextView
                        style="@style/style_text_tip_white"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/dimen_margin_small"
                        android:text="网贷被拒率"
                        android:textSize="9sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_margin"
                android:background="@drawable/shape_bg_white_full_25"
                android:orientation="vertical"
                android:padding="@dimen/dimen_margin">

                <TextView
                    android:id="@+id/text_name"
                    style="@style/style_text_title_dark"
                    android:text="张某某"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_margin"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/style_text_tip_gray"
                            android:text="手机号：" />

                        <TextView
                            android:id="@+id/text_telephone"
                            style="@style/style_text_tip_gray"
                            android:text="138****8888"
                            android:textColor="#333333" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/style_text_tip_gray"
                            android:text="年龄：" />

                        <TextView
                            android:id="@+id/text_user_age"
                            style="@style/style_text_tip_gray"
                            android:text="18岁"
                            android:textColor="#333333" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_margin"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/style_text_tip_gray"
                            android:text="身份证：" />

                        <TextView
                            android:id="@+id/text_id_card"
                            style="@style/style_text_tip_gray"
                            android:text="210112888888888888"
                            android:textColor="#333333" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/style_text_tip_gray"
                            android:text="归属地：" />

                        <TextView
                            android:id="@+id/text_address"
                            style="@style/style_text_tip_gray"
                            android:text="浙江-杭州"
                            android:textColor="#333333" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_margin"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/style_text_tip_gray"
                        android:text="报告更新时间：" />

                    <TextView
                        android:id="@+id/text_update_time"
                        style="@style/style_text_tip_gray"
                        android:text="2019-07-23"
                        android:textColor="#333333" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_margin"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/style_text_tip_gray"
                        android:text="报告编号：" />

                    <TextView
                        android:id="@+id/text_report_no"
                        style="@style/style_text_tip_gray"
                        android:text="124356778889998755456778"
                        android:textColor="#333333" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_margin"
                android:background="@drawable/shape_bg_white_full_25"
                android:orientation="vertical"
                android:padding="@dimen/dimen_margin">

                <TextView
                    style="@style/style_text_title_dark"
                    android:text="贷前风险核查"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_margin"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/style_text_common_dark"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="身份证命中网贷失信/逾期灰名单" />

                    <TextView
                        android:id="@+id/text_risk_0"
                        style="@style/style_text_common_gray"
                        android:layout_width="60dp"
                        android:background="@drawable/shape_bg_blue_25"
                        android:gravity="center"
                        android:paddingTop="3dp"
                        android:paddingBottom="3dp"
                        android:text="未命中"
                        android:textColor="#3A87FF" />
                </LinearLayout>

                <TextView
                    style="@style/style_text_tip_dark"
                    android:layout_marginTop="@dimen/dimen_margin_small"
                    android:id="@+id/text_risk_content_0"
                    android:text="您未命中本项风险" />

                <TextView
                    style="@style/style_text_tip_gray"
                    android:layout_marginTop="@dimen/dimen_margin"
                    android:text="借款前，放款机构会在金融平台共享信息中查询用户是否存在法院失信、违章、欠款、贷款逾期、展期等问题" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="@dimen/dimen_margin"
                    android:background="@color/color_gray_0" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_margin"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/style_text_common_dark"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="手机号命中网贷中风险/低风险名单" />

                    <TextView
                        android:id="@+id/text_risk_1"
                        style="@style/style_text_common_gray"
                        android:layout_width="60dp"
                        android:background="@drawable/shape_bg_blue_25"
                        android:gravity="center"
                        android:paddingTop="3dp"
                        android:paddingBottom="3dp"
                        android:text="未命中"
                        android:textColor="#3A87FF" />
                </LinearLayout>

                <TextView
                    android:id="@+id/text_risk_content_1"
                    style="@style/style_text_tip_dark"
                    android:layout_marginTop="@dimen/dimen_margin_small"
                    android:text="您未命中本项风险" />

                <TextView
                    style="@style/style_text_tip_gray"
                    android:layout_marginTop="@dimen/dimen_margin"
                    android:text="借款前，放款机构会在金融平台共享信息中查询用户是否存在贷款不良行为记录，包括借款人填写资料与实际不符，借款人信息出现在多家小贷注册名单中等情况" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="@dimen/dimen_margin"
                    android:background="@color/color_gray_0" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_margin"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/style_text_common_dark"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="申请信息非本人操作嫌疑" />

                    <TextView
                        android:id="@+id/text_risk_2"
                        style="@style/style_text_common_gray"
                        android:layout_width="60dp"
                        android:background="@drawable/shape_bg_blue_25"
                        android:gravity="center"
                        android:paddingTop="3dp"
                        android:paddingBottom="3dp"
                        android:text="未命中"
                        android:textColor="#3A87FF" />
                </LinearLayout>

                <TextView
                    style="@style/style_text_tip_dark"
                    android:layout_marginTop="@dimen/dimen_margin_small"
                    android:id="@+id/text_risk_content_2"
                    android:text="您未命中本项风险" />

                <TextView
                    style="@style/style_text_tip_gray"
                    android:layout_marginTop="@dimen/dimen_margin"
                    android:text="借款前，放款机构会查询用户是否有过本人贷款，疑似中介帮忙贷款行为。" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="@dimen/dimen_margin"
                    android:background="@color/color_gray_0" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_margin"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/style_text_common_dark"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="申请频次过高，负债风险检测" />

                    <TextView
                        android:id="@+id/text_risk_3"
                        style="@style/style_text_common_gray"
                        android:layout_width="60dp"
                        android:background="@drawable/shape_bg_blue_25"
                        android:gravity="center"
                        android:paddingTop="3dp"
                        android:paddingBottom="3dp"
                        android:text="未命中"
                        android:textColor="#3A87FF" />
                </LinearLayout>

                <TextView
                    style="@style/style_text_tip_dark"
                    android:layout_marginTop="@dimen/dimen_margin_small"
                    android:id="@+id/text_risk_content_3"
                    android:text="您未命中本项风险" />

                <TextView
                    style="@style/style_text_tip_gray"
                    android:layout_marginTop="@dimen/dimen_margin"
                    android:text="验证用户是否存在申请频率过高，导致高负债风险" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="@dimen/dimen_margin"
                    android:background="@color/color_gray_0" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_margin"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/style_text_common_dark"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="用户命中行业逾期黑名单" />

                    <TextView
                        android:id="@+id/text_risk_4"
                        style="@style/style_text_common_gray"
                        android:layout_width="60dp"
                        android:background="@drawable/shape_bg_blue_25"
                        android:gravity="center"
                        android:paddingTop="3dp"
                        android:paddingBottom="3dp"
                        android:text="未命中"
                        android:textColor="#3A87FF" />
                </LinearLayout>

                <TextView
                    style="@style/style_text_tip_dark"
                    android:layout_marginTop="@dimen/dimen_margin_small"
                    android:id="@+id/text_risk_content_4"
                    android:text="您未命中本项风险" />

                <TextView
                    style="@style/style_text_tip_gray"
                    android:layout_marginTop="@dimen/dimen_margin"
                    android:text="本项深度解析用户存在过或曾经发生的逾期行为，以及用户的逾期风险" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_margin"
                android:background="@drawable/shape_bg_white_full_25"
                android:orientation="vertical"
                android:padding="@dimen/dimen_margin">

                <TextView
                    style="@style/style_text_title_dark"
                    android:text="多头借贷注册分析"
                    android:textStyle="bold" />

                <TextView
                    style="@style/style_text_common_dark"
                    android:layout_marginTop="@dimen/dimen_margin"
                    android:text="多头风险统计" />

                <TextView
                    style="@style/style_text_tip_gray"
                    android:layout_marginTop="@dimen/dimen_margin_small"
                    android:text="短期内多头数量越多，申贷被拒风险越高" />

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_margin"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/radio_btn_tab_0"
                        style="@style/style_text_common_white"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:background="@drawable/select_bg_set_meal_tab"
                        android:button="@null"
                        android:gravity="center"
                        android:paddingTop="@dimen/dimen_margin_small"
                        android:checked="true"
                        android:paddingBottom="@dimen/dimen_margin_small"
                        android:text="近2个月" />

                    <RadioButton
                        android:id="@+id/radio_btn_tab_1"
                        style="@style/style_text_common_white"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:background="@drawable/select_bg_set_meal_tab"
                        android:button="@null"
                        android:gravity="center"
                        android:paddingTop="@dimen/dimen_margin_small"
                        android:paddingBottom="@dimen/dimen_margin_small"
                        android:text="近3个月"
                        android:textColor="#3A87FF" />

                    <RadioButton
                        android:id="@+id/radio_btn_tab_2"
                        style="@style/style_text_common_white"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:background="@drawable/select_bg_set_meal_tab"
                        android:button="@null"
                        android:gravity="center"
                        android:paddingTop="@dimen/dimen_margin_small"
                        android:paddingBottom="@dimen/dimen_margin_small"
                        android:text="近6个月"
                        android:textColor="#3A87FF" />
                </RadioGroup>

                <com.github.mikephil.charting.charts.PieChart
                    android:id="@+id/pic_chart"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_marginTop="@dimen/dimen_margin" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>