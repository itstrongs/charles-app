<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@mipmap/img_my_bg" />

        <TextView
            style="@style/style_text_tip_gray"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dimen_margin"
            android:layout_marginBottom="@dimen/dimen_margin"
            android:text="Copyright️©2019信用助理" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dimen_margin"
            android:paddingRight="@dimen/dimen_margin">

            <TextView
                style="@style/style_text_title_white"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dimen_margin_big"
                android:text="我的" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_margin"
                android:layout_marginTop="@dimen/dimen_margin">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@mipmap/ic_head_img" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_margin"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/text_username"
                        style="@style/style_text_title_white"
                        android:layout_gravity="center_vertical" />

                    <TextView
                        style="@style/style_text_tip_gray"
                        android:layout_marginTop="@dimen/dimen_margin_small"
                        android:background="@mipmap/ic_btn_bg_black"
                        android:drawableLeft="@mipmap/ic_ensure"
                        android:drawablePadding="@dimen/dimen_margin_small"
                        android:paddingLeft="@dimen/dimen_margin_small"
                        android:paddingRight="@dimen/dimen_margin_small"
                        android:text="保障中" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_margin">

                <FrameLayout
                    android:id="@+id/layout_history_report"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/shape_bg_white_full">

                    <TextView
                        style="@style/style_text_common_dark"
                        android:layout_gravity="center"
                        android:drawableLeft="@mipmap/ic_history"
                        android:drawablePadding="@dimen/dimen_margin_small"
                        android:padding="@dimen/dimen_margin"
                        android:text="历史报告" />
                </FrameLayout>


                <FrameLayout
                    android:id="@+id/layout_share"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_margin"
                    android:layout_weight="1"
                    android:background="@drawable/shape_bg_white_full">

                    <TextView
                        style="@style/style_text_common_dark"
                        android:layout_gravity="center"
                        android:drawableLeft="@mipmap/ic_coupon"
                        android:drawablePadding="@dimen/dimen_margin_small"
                        android:padding="@dimen/dimen_margin"
                        android:text="优惠券" />
                </FrameLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/img_invite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_margin"
                android:src="@mipmap/img_banner" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_margin"
                android:background="@color/color_white"
                android:orientation="vertical"
                android:padding="@dimen/dimen_margin">

                <TextView
                    android:id="@+id/text_protocol"
                    style="@style/style_text_common_dark"
                    android:layout_width="match_parent"
                    android:drawableLeft="@mipmap/ic_my_menu_0"
                    android:drawableRight="@mipmap/ic_boult_right"
                    android:drawablePadding="@dimen/dimen_margin_small"
                    android:text="授权协议" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="@dimen/dimen_margin"
                    android:background="@color/color_gray_0" />

                <TextView
                    android:id="@+id/text_version"
                    style="@style/style_text_common_dark"
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/dimen_margin"
                    android:drawableLeft="@mipmap/ic_my_menu_2"
                    android:drawableRight="@mipmap/ic_boult_right"
                    android:drawablePadding="@dimen/dimen_margin_small"
                    android:text="版本信息" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="@dimen/dimen_margin"
                    android:background="@color/color_gray_0" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_margin"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/style_text_common_dark"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:drawableLeft="@mipmap/ic_my_menu_3"
                        android:drawablePadding="@dimen/dimen_margin_small"
                        android:text="添加客服微信" />

                    <TextView
                        android:id="@+id/text_wechat_code"
                        style="@style/style_text_common_dark" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/text_logout"
                style="@style/style_text_common_dark"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/dimen_margin"
                android:background="@color/color_white"
                android:drawableLeft="@mipmap/ic_my_menu_4"
                android:drawableRight="@mipmap/ic_boult_right"
                android:drawablePadding="@dimen/dimen_margin_small"
                android:padding="@dimen/dimen_margin"
                android:text="退出登录" />
        </LinearLayout>
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>