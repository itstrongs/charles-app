<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dimen_margin">

    <LinearLayout
            android:id="@+id/layout_apply"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_margin"
        android:background="@drawable/shape_bg_white_full"
        android:gravity="center_horizontal"
            android:padding="@dimen/dimen_margin_small"
        android:orientation="vertical">

        <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

            <ImageView
                    android:id="@+id/img_logo"
                    android:layout_width="20dp" android:layout_height="20dp"
                    android:src="@mipmap/ic_coupon"/>

            <TextView
                    android:id="@+id/text_name"
                    style="@style/style_text_common_dark"
                    android:layout_marginLeft="@dimen/dimen_margin_small"
                    android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="@dimen/dimen_margin"
            android:background="@color/color_gray_0" />

        <TextView
            style="@style/style_text_common_gray"
            android:layout_marginTop="@dimen/dimen_margin"
            android:text="额度" />

        <TextView
                android:id="@+id/text_range"
            style="@style/style_text_title_dark"
            android:layout_marginTop="@dimen/dimen_margin_small"
            android:textSize="16sp"/>

        <TextView
                android:id="@+id/text_rate"
            style="@style/style_text_common_gray"
            android:layout_marginTop="@dimen/dimen_margin"/>

        <TextView
            style="@style/style_text_tip_gray"
            android:layout_marginTop="@dimen/dimen_margin"
            android:background="@drawable/shape_bg_gray_5"
            android:paddingLeft="@dimen/dimen_margin_small"
            android:paddingTop="3dp"
            android:paddingRight="@dimen/dimen_margin_small"
            android:paddingBottom="3dp"
            android:text="自动闪速审核" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>