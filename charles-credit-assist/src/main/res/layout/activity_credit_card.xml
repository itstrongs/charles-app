<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <ImageView
                android:id="@+id/img_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/dimen_margin"
                android:src="@mipmap/ic_back" />

            <TextView
                style="@style/style_text_title_dark"
                android:layout_centerInParent="true"
                android:text="信用卡" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/color_gray_0" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_margin"
            android:layout_marginTop="@dimen/dimen_margin"
            android:layout_marginRight="@dimen/dimen_margin"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/shape_bg_white_full"
                android:drawableTop="@mipmap/ic_credit_card_menu_0"
                android:gravity="center"
                android:paddingTop="@dimen/dimen_margin"
                android:paddingBottom="@dimen/dimen_margin"
                android:text="信用卡办理" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_margin_small"
                android:layout_weight="1"
                android:background="@drawable/shape_bg_white_full"
                android:drawableTop="@mipmap/ic_credit_card_menu_1"
                android:gravity="center"
                android:paddingTop="@dimen/dimen_margin"
                android:paddingBottom="@dimen/dimen_margin"
                android:text="信用卡办理" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_margin_small"
                android:layout_weight="1"
                android:background="@drawable/shape_bg_white_full"
                android:drawableTop="@mipmap/ic_credit_card_menu_2"
                android:gravity="center"
                android:paddingTop="@dimen/dimen_margin"
                android:paddingBottom="@dimen/dimen_margin"
                android:text="信用卡办理" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="@dimen/dimen_margin"
            android:layout_marginTop="@dimen/dimen_margin"
            android:layout_marginRight="@dimen/dimen_margin"
            android:background="@drawable/shape_bg_white_full" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_margin"
            android:layout_marginTop="@dimen/dimen_margin"
            android:layout_marginRight="@dimen/dimen_margin"
            android:orientation="horizontal">

            <TextView
                    android:id="@+id/text_tab_0"
                style="@style/style_text_common_dark"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@drawable/shape_bg_cyan_25"
                android:gravity="center"
                android:paddingTop="@dimen/dimen_margin_small"
                android:paddingBottom="@dimen/dimen_margin_small"
                android:text="热门"
                android:textColor="#3A87FF" />

            <TextView
                    android:id="@+id/text_tab_1"
                style="@style/style_text_common_dark"
                android:layout_width="0dp"
                    android:paddingTop="@dimen/dimen_margin_small"
                    android:paddingBottom="@dimen/dimen_margin_small"
                android:layout_weight="1"
                android:gravity="center"
                android:text="额度高" />

            <TextView
                    android:id="@+id/text_tab_2"
                style="@style/style_text_common_dark"
                android:layout_width="0dp"
                android:layout_weight="1"
                    android:paddingTop="@dimen/dimen_margin_small"
                    android:paddingBottom="@dimen/dimen_margin_small"
                android:gravity="center"
                android:text="颜值爆表" />
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dimen_margin"
            android:layout_marginRight="@dimen/dimen_margin" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>