<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
    >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_margin"
                android:src="@mipmap/ic_back" />

            <TextView
                style="@style/style_text_title_dark"
                android:layout_centerInParent="true"
                android:text="重置密码" />
        </RelativeLayout>

        <EditText
            android:id="@+id/edit_password"
            style="@style/style_text_title_dark"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/dimen_margin"
            android:layout_marginLeft="@dimen/dimen_margin"
            android:layout_marginRight="@dimen/dimen_margin"
            android:background="@color/color_transparent"
            android:hint="请输入新密码"
            android:inputType="textPassword"
            android:padding="@dimen/dimen_margin_small" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="@dimen/dimen_margin"
            android:layout_marginRight="@dimen/dimen_margin"
            android:background="@color/color_gray_0" />

        <EditText
            android:id="@+id/edit_new_password"
            style="@style/style_text_title_dark"
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/dimen_margin"
            android:layout_marginRight="@dimen/dimen_margin"
            android:layout_marginTop="@dimen/dimen_margin"
            android:background="@color/color_transparent"
            android:hint="请再输入一次新密码"
            android:inputType="textPassword"
            android:padding="@dimen/dimen_margin_small" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="@dimen/dimen_margin"
            android:layout_marginRight="@dimen/dimen_margin"
            android:background="@color/color_gray_0" />

        <Button
            android:id="@+id/btn_reset"
            style="@style/style_text_title_white"
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/dimen_margin"
            android:layout_marginRight="@dimen/dimen_margin"
            android:layout_marginTop="@dimen/dimen_margin_big"
            android:background="@drawable/shape_text_bg_blue_5"
            android:text="重置密码" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>