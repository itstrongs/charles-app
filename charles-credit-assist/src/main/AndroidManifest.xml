<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.charles.credit.assist">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".CreditApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".activity.SplashActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activity.MainActivity"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.imgFullScreen">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activity.LoginActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".activity.SetMealActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.imgFullScreen" />

        <activity
            android:name=".activity.PayActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".activity.ShareActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".activity.GradeResultActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.imgFullScreen" />

        <activity
            android:name=".activity.VersionActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".activity.WebViewActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".activity.HistoryActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.charles.credit.assist.wxapi.WXPayEntryActivity"
            android:exported="true"
            android:launchMode="singleTop"
            android:theme="@style/Theme.imgFullScreen">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:scheme="wxc48425ee771394ca" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activity.InviteActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.imgFullScreen" />

        <activity
            android:name=".activity.GradeActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.imgFullScreen" />

        <activity
            android:name=".activity.ContactsActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.imgFullScreen" />

        <activity
            android:name=".activity.BlacklistActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.imgFullScreen" />

        <activity
            android:name=".activity.ApplyActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.imgFullScreen" />

        <activity
            android:name=".activity.OperatorActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.imgFullScreen" />

        <activity
            android:name=".activity.ChargesActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.imgFullScreen" />

        <activity
            android:name=".activity.EmergencyActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.imgFullScreen" />

        <activity
            android:name=".activity.CreditCardActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.imgFullScreen" />

        <activity
            android:name=".activity.CouponActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.imgFullScreen" />

        <activity
            android:name=".activity.ApplyResultActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.imgFullScreen" />

        <activity
            android:name=".activity.BlackResultActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.imgFullScreen" />

        <activity
            android:name=".activity.ContactsResultActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.imgFullScreen" />

        <activity
            android:name=".activity.SetMealResultActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.imgFullScreen" />
    </application>
</manifest>