<RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="@dimen/dimen_margin_small"
    android:paddingBottom="@dimen/dimen_margin_small">

    <RadioButton
        android:id="@+id/radio_menu_home"
        style="@style/style_text_title_dark"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:button="@null"
        android:checked="true"
        android:drawableTop="@drawable/ic_tab_home"
        android:drawablePadding="3dp"
        android:gravity="center_horizontal"
        android:text="首页"
        android:textSize="12sp" />

    <RadioButton
        android:id="@+id/radio_menu_find_student"
        style="@style/style_text_title_dark"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:button="@null"
        android:checked="true"
        android:drawableTop="@drawable/ic_tab_home"
        android:drawablePadding="3dp"
        android:gravity="center_horizontal"
        android:text="找学生"
        android:textSize="12sp" />

    <RadioButton
        android:id="@+id/radio_menu_find_teacher"
        style="@style/style_text_title_dark"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:button="@null"
        android:checked="true"
        android:drawableTop="@drawable/ic_tab_home"
        android:drawablePadding="3dp"
        android:gravity="center_horizontal"
        android:text="找老师"
        android:textSize="12sp" />

    <RadioButton
        android:id="@+id/radio_menu_my"
        style="@style/style_text_title_dark"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:button="@null"
        android:checked="true"
        android:drawableTop="@drawable/ic_tab_home"
        android:drawablePadding="3dp"
        android:gravity="center_horizontal"
        android:text="我"
        android:textSize="12sp" />
</RadioGroup>
